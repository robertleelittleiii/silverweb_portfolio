<div class="myaccountblock">
  <div align="center">
    <!-- START:flash -->
    <% if flash[:notice] -%>
      <div id="notice"><%= flash[:notice] %></div>
    <% end -%>
    <!-- END:flash -->
  </div>

  <div id="site-pref-list">
    <h1  class="myaccountheader">Room</h1>

    <%= link_to 'New Room', :action=>:create_empty_record,:typeofrecord=>"artifact" %>

    <%  @artifacts.each do |artifact| %>
      <div class="hr"></div>
      <table width ="100%"cellpadding="5" cellspacing="0">
        <tr class="list-table" valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>"  onclick = "window.location.href ='<%=url_for(:controller => 'artifacts', :id => artifact.id,  :action => 'edit')%>' "  style = "cursor:pointer" >
                      <td align="left">
    <span class="list-title"><%= artifact.name %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= artifact.description %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= artifact.portfolio_id %></span>
          </td>
          
        </tr>
      </table>
      <div align="right" class="image-delete-list" >
        <%=link_to image_tag ("Button-Delete.png", :border=>"0") , artifact,:on_click=>"", :confirm => 'Are you sure?', :method => :delete %>
      </div>
    <% end %>
    <div class="hr"></div>

  </div>
    <center><%= link_to 'New Room', :action=>:create_empty_record,:typeofrecord=>"artifact" %></center>
</div>
